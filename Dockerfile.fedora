# Build Fedora 31 image
FROM fedora:31

RUN dnf -y install \
  acl \
  autoconf \
  automake \
  boost-devel \
  btrfs-progs \
  dbus-devel \
  docbook-style-xsl \
  e2fsprogs-devel \
  gcc-c++ \
  gettext \
  glibc-langpack-de \
  glibc-langpack-en \
  json-c-devel \
  lcov \
  libacl-devel \
  libmount-devel \
  libtool \
  libxml2-devel \
  libxslt \
  make \
  pam-devel \
  pkgconfig \
  rpm-build

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

COPY . /usr/src/app
